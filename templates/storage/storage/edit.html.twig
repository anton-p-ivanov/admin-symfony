{% extends 'main.html.twig' %}

{% block title %}File storage / Edit an element{% endblock %}

{% block content %}

    {{ include('storage/storage/_form.html.twig') }}

    {# Hidden input for file upload #}
    <input type="file" name="file"
           data-upload="{{ uploaderUrl }}/upload"
           data-move="{{ uploaderUrl }}/move"
           data-create="{{ path('storage:versions:upload', {'uuid': storage.uuid}) }}" />

{% endblock %}

{% block modals %}
    {{ parent() }}

    {# Upload modal #}
    {{ include('storage/storage/_upload.html.twig') }}

    {# Version modal #}
    <div class="modal" id="version-modal">
        <div class="modal__container"></div>
    </div>

    {# Confirm modal #}
    <div class="modal" id="confirm-modal">
        <div class="modal__container modal__container--confirm"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('form') }}
    {{ encore_entry_script_tags('storage') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
    {{ encore_entry_link_tags('storage') }}
{% endblock %}