<div class="btn-group" role="group">
    <div class="btn-group__item">
        <a class="btn btn--default" href="{{ path('users:add') }}">
            {{ 'toolbar.btn.add' | trans({}, 'users') }}
        </a>
    </div>
</div>
<div class="btn-group" role="group">
    <div class="btn-group__item">
        <a class="btn btn--default btn--icon btn--disabled" href="{{ path('users:delete', {'batch': true}) }}" data-disabled="true" data-watch="checked" data-toggle="modal" data-target="#confirm-modal">
            <svg width="24" height="24"><use xlink:href="#svg-delete"></use></svg>
        </a>
    </div>
    <div class="btn-group__item">
        <a class="btn btn--default btn--icon" href="{{ path('users:index', {'page': rows.page}) }}" data-update="#spreadsheet" data-history="false">
            <svg width="24" height="24"><use xlink:href="#svg-refresh"></use></svg>
        </a>
    </div>
</div>