{% extends 'base.html.twig' %}

{% block title %}
    {{ 'form.password.title' | trans }}
{% endblock %}

{% block body %}
    <div class="p-profile">
        <div class="modal modal--password">
            <div class="modal__header">
                {{ block('title') }}
            </div>
            <div class="modal__body">

                <div class="alert alert--warning">
                    {{ 'form.password.notice' | trans }}
                </div>

                {{ form_start(form, {'attr': {'class': 'form form--password', 'novalidate': true}}) }}
                {{ form_errors(form) }}

                <div class="form__group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'placeholder': 'form.placeholder.email', 'autofocus': true}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="form__group">
                    {{ form_label(form.checkword) }}
                    {{ form_widget(form.checkword) }}
                    {{ form_errors(form.checkword) }}
                </div>

                <div class="form__group form__group--columns">
                    <div class="form__group">
                        {{ form_label(form.password.first) }}
                        {{ form_widget(form.password.first) }}
                        {{ form_errors(form.password.first) }}
                    </div>
                    <div class="form__group">
                        {{ form_label(form.password.second) }}
                        {{ form_widget(form.password.second) }}
                        {{ form_errors(form.password.second) }}
                    </div>
                </div>

                <button type="submit" class="btn btn--primary btn--block">{{ 'form.password.submit' | trans }}</button>

                <div class="links-group">
                    <a class="links-group__link" href="{{ path('profile:login') }}">{{ 'form.profile.login_link' | trans }}</a>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}