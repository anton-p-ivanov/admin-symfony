{% use "form_div_layout.html.twig" %}

{% block form_widget_simple %}
    {% if type is not defined or type != 'hidden' %}
        {% set attr = attr|merge({'class': (attr.class|default('') ~ ' form__input')|trim}) %}
        {% if not valid %}
            {% set attr = attr|merge({'class': (attr.class ~ ' form__input--invalid')|trim}) %}
        {% endif %}
    {% endif %}
    {{ parent() }}
{% endblock form_widget_simple %}

{% block form_label %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' form__label')|trim}) %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class ~ ' form__label--required')|trim}) %}
        {% set required = false %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="form__error">
            {{ (errors|first).message }}
        </div>
    {% endif %}
{% endblock form_errors %}

{% block form_row %}
    {% set widget_attr = {} %}
    {% if help is not empty %}
        {% set widget_attr = {attr: {'aria-describedby': id ~"_help"}} %}
    {% endif %}
    <div class="form__group">
        {{- form_label(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_errors(form) -}}
        {{- form_help(form) -}}
    </div>
{% endblock form_row %}